            <!--style="?android:attr/progressBarStyleLarge"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />-->

    </FrameLayout>

</layout>

