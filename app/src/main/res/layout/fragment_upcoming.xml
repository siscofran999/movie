<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.upcoming.UpcomingFragment">

    <data>

        <variable
            name="viewModel"
            type="com.fransisco.catalogmoviekotlin.ui.upcoming.UpcomingViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upcomingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_upcoming_list"
                app:upcomingAdapter="@{viewModel.upcomingMovieObsArrayList}"/>

        </LinearLayout>

    </FrameLayout>

</layout>

